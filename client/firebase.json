{
  "emulators": {
    "hosting": {
      "port": 5004,
      "host": "0.0.0.0"
    }
  },
  "hosting": {
    "public": "client",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "headers": [
    {
      "source": "*/.@(ts|tsx|css|html|png|svg)",
      "headers": [
        {
          "key": "Content-Encoding",
          "value": "br"
        }
      ]
    }
  ],
  "database": {
    "rules": "firestore.rules"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
